---
// /src/pages/tdaas/index.astro
// Config-driven TDaaS Hub - Reads from tdaas-datasets.json
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import datasetsConfig from '../../data/tdaas-datasets.json';

const datasets = datasetsConfig.datasets;
---

<Layout title="Trade Data as a Service (TDaaS) | CEPROC" description="Access Canada's trade data through interactive analytics and downloadable datasets">
  
  <!-- HERO SECTION -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-600 to-blue-800 pt-24 pb-32">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-8">
        <!-- Badge Row -->
        <div class="flex justify-center items-center gap-4 flex-wrap">
          <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-700 bg-opacity-50 border border-green-500/30">
            <div class="h-2 w-2 rounded-full bg-green-400 animate-pulse"></div>
            <span class="text-green-400 font-semibold text-sm">Real-time Updates</span>
          </div>
          <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-700 bg-opacity-50 border border-cyan-500/30">
            <div class="h-2 w-2 rounded-full bg-cyan-400"></div>
            <span class="text-cyan-400 font-semibold text-sm">Government Sources</span>
          </div>
          <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-700 bg-opacity-50 border border-purple-500/30">
            <div class="h-2 w-2 rounded-full bg-purple-400"></div>
            <span class="text-purple-400 font-semibold text-sm">Interactive Charts</span>
          </div>
          <div class="flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-700 bg-opacity-50 border border-blue-500/30">
            <div class="h-2 w-2 rounded-full bg-blue-400"></div>
            <span class="text-blue-400 font-semibold text-sm">Export Ready</span>
          </div>
        </div>

        <!-- Headline -->
        <div class="space-y-6">
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl leading-tight">
            Trade Data as a Service
            <span class="block mt-2 text-cyan-300">TDaaS</span>
          </h1>
          <p class="mx-auto max-w-3xl text-xl text-cyan-100 font-medium">
            Access comprehensive Canadian trade datasets with interactive analytics, real-time visualizations, and instant downloads
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- DATASETS SECTION -->
  <section class="bg-white py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-slate-900 mb-4">Explore Trade Datasets</h2>
        <p class="text-xl text-slate-600">Click any card below to view interactive charts and download data</p>
      </div>

      <!-- Dataset Cards Grid - CONFIG DRIVEN -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        
        {datasets.map((dataset) => {
          const isActive = dataset.status === 'active';
          const colorMap = {
            blue: { badge: 'text-blue-700 bg-blue-100', gradient: 'from-blue-400 to-blue-600', border: 'border-blue-500' },
            purple: { badge: 'text-purple-700 bg-purple-100', gradient: 'from-purple-400 to-purple-600', border: 'border-purple-500' },
            green: { badge: 'text-green-700 bg-green-100', gradient: 'from-green-400 to-green-600', border: 'border-green-500' }
          };
          const colors = colorMap[dataset.categoryColor as keyof typeof colorMap];

          return (
            <div class={`group relative bg-white rounded-xl border-2 border-slate-200 transition-all duration-300 ${
              isActive ? 'hover:border-' + dataset.categoryColor + '-500 hover:shadow-2xl' : 'opacity-60 cursor-not-allowed'
            }`}>
              <div class="p-8">
                <!-- Category Badge -->
                <div class="mb-4">
                  <span class={`inline-block px-3 py-1 text-xs font-bold rounded-full ${colors.badge}`}>
                    {dataset.category}
                  </span>
                </div>

                <!-- Icon -->
                <div class={`mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br ${colors.gradient} shadow-lg`}>
                  <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {dataset.icon === 'chart-bar' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    )}
                    {dataset.icon === 'globe' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    )}
                    {dataset.icon === 'package' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    )}
                  </svg>
                </div>

                <!-- Content -->
                <h3 class="text-2xl font-bold text-slate-900 mb-3">{dataset.title}</h3>
                <p class="text-slate-600 mb-6">{dataset.description}</p>

                <!-- Value Prop -->
                {isActive && (
                  <div class="mb-6 space-y-2">
                    <div class="flex items-start space-x-2">
                      <svg class={`h-5 w-5 text-${dataset.categoryColor}-500 mt-0.5`} fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-slate-700"><strong>Value:</strong> {dataset.valueProposition}</span>
                    </div>
                  </div>
                )}

                <!-- CTA Button or Coming Soon Badge -->
                {isActive ? (
                  <button 
                    data-modal={dataset.id}
                    class={`modal-trigger w-full inline-flex items-center justify-center space-x-2 px-6 py-3 rounded-lg bg-gradient-to-r from-${dataset.categoryColor}-500 to-${dataset.categoryColor}-600 text-white font-bold hover:from-${dataset.categoryColor}-600 hover:to-${dataset.categoryColor}-700 transition-all duration-300 shadow-lg hover:shadow-xl group-hover:scale-105`}
                  >
                    <span>View Analytics</span>
                    <svg class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </button>
                ) : (
                  <div class="mb-6">
                    <span class="inline-block px-4 py-2 bg-yellow-100 text-yellow-800 text-sm font-bold rounded-lg">
                      Coming Soon
                    </span>
                  </div>
                )}
              </div>
            </div>
          );
        })}

      </div>
    </div>
  </section>

  <Footer />

  <!-- Import React Modal Component -->
  <div id="trade-balance-modal-root"></div>
</Layout>

<!-- Client-side Script -->
<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import TradeBalanceModal from '../../components/tdaas/TradeBalanceModal';

  // Initialize modal
  let modalRoot: any = null;
  let isModalOpen = false;

  function openModal() {
    isModalOpen = true;
    renderModal();
  }

  function closeModal() {
    isModalOpen = false;
    renderModal();
  }

  function renderModal() {
    const container = document.getElementById('trade-balance-modal-root');
    if (!container) return;

    if (!modalRoot) {
      modalRoot = createRoot(container);
    }

    modalRoot.render(
      createElement(TradeBalanceModal, {
        isOpen: isModalOpen,
        onClose: closeModal
      })
    );
  }

  // Attach event listeners
  document.addEventListener('DOMContentLoaded', () => {
    const triggers = document.querySelectorAll('.modal-trigger[data-modal="trade-balance"]');
    triggers.forEach(trigger => {
      trigger.addEventListener('click', openModal);
    });

    // Initialize modal (closed)
    renderModal();
  });
</script>

<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>