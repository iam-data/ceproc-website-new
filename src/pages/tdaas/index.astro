---
// /src/pages/tdaas/index.astro
// 100% CONFIG-DRIVEN - Zero hardcoded content
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import pageConfig from '../../data/tdaas-page-config.json';

// All content from config
const { meta, hero, datasetsSection, datasets, iconMappings, colorMappings } = pageConfig;
---

<Layout 
  title={`${meta.title} | ${meta.titleSuffix}`} 
  description={meta.description}
>
  
  <!-- HERO SECTION - FULLY CONFIG-DRIVEN -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-600 to-blue-800 pt-24 pb-32">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center space-y-8">
        
        <!-- Badge Row - FROM CONFIG -->
        <div class="flex justify-center items-center gap-4 flex-wrap">
          {hero.badges.map((badge) => (
            <div class={`flex items-center space-x-2 px-4 py-2 rounded-full bg-blue-700 bg-opacity-50 border border-${badge.color}-500/30`}>
              {badge.icon === 'pulse' && (
                <div class={`h-2 w-2 rounded-full bg-${badge.color}-400 animate-pulse`}></div>
              )}
              {badge.icon !== 'pulse' && (
                <div class={`h-2 w-2 rounded-full bg-${badge.color}-400`}></div>
              )}
              <span class={`text-${badge.color}-400 font-semibold text-sm`}>{badge.label}</span>
            </div>
          ))}
        </div>

        <!-- Headline - FROM CONFIG -->
        <div class="space-y-6">
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl leading-tight">
            {hero.mainHeading.line1}
            <span class="block mt-2 text-cyan-300">{hero.mainHeading.line2}</span>
          </h1>
          <p class="mx-auto max-w-3xl text-xl text-cyan-100 font-medium">
            {hero.subheading}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- DATASETS SECTION - FULLY CONFIG-DRIVEN -->
  <section class="bg-white py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      
      <!-- Section Header - FROM CONFIG -->
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-slate-900 mb-4">{datasetsSection.heading}</h2>
        <p class="text-xl text-slate-600">{datasetsSection.subheading}</p>
      </div>

      <!-- Dataset Cards Grid - FROM CONFIG -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        
        {datasets.map((dataset) => {
          const isActive = dataset.status === 'active';
          const colors = colorMappings[dataset.categoryColor];
          const iconPath = iconMappings[dataset.icon];

          return (
            <div class={`group relative bg-white rounded-xl border-2 border-slate-200 transition-all duration-300 ${
              isActive ? `hover:${colors.border} hover:shadow-2xl` : 'opacity-60 cursor-not-allowed'
            }`}>
              <div class="p-8">
                
                <!-- Category Badge - FROM CONFIG -->
                <div class="mb-4">
                  <span class={`inline-block px-3 py-1 text-xs font-bold rounded-full ${colors.badge}`}>
                    {dataset.category}
                  </span>
                </div>

                <!-- Icon - FROM CONFIG -->
                <div class={`mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br ${colors.gradient} shadow-lg`}>
                  <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath}></path>
                  </svg>
                </div>

                <!-- Content - FROM CONFIG -->
                <h3 class="text-2xl font-bold text-slate-900 mb-3">{dataset.title}</h3>
                <p class="text-slate-600 mb-6">{dataset.description}</p>

                <!-- Value Prop - FROM CONFIG -->
                {isActive && dataset.valueProposition && (
                  <div class="mb-6 space-y-2">
                    <div class="flex items-start space-x-2">
                      <svg class={`h-5 w-5 ${colors.checkmark} mt-0.5`} fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-slate-700"><strong>Value:</strong> {dataset.valueProposition}</span>
                    </div>
                  </div>
                )}

                <!-- CTA Button or Coming Soon Badge - FROM CONFIG -->
                {isActive ? (
                  <button 
                    data-modal={dataset.id}
                    class={`modal-trigger w-full inline-flex items-center justify-center space-x-2 px-6 py-3 rounded-lg bg-gradient-to-r ${colors.button} text-white font-bold transition-all duration-300 shadow-lg hover:shadow-xl group-hover:scale-105`}
                  >
                    <span>{dataset.buttonText}</span>
                    <svg class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </button>
                ) : (
                  <div class="mb-6">
                    <span class="inline-block px-4 py-2 bg-yellow-100 text-yellow-800 text-sm font-bold rounded-lg">
                      {dataset.comingSoonBadge}
                    </span>
                  </div>
                )}
              </div>
            </div>
          );
        })}

      </div>
    </div>
  </section>

  <Footer />

  <!-- Import React Modal Component -->
  <div id="trade-balance-modal-root"></div>
</Layout>

<!-- Client-side Script -->
<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import TradeBalanceModal from '../../components/tdaas/TradeBalanceModal';

  // Initialize modal
  let modalRoot: any = null;
  let isModalOpen = false;

  function openModal() {
    isModalOpen = true;
    renderModal();
  }

  function closeModal() {
    isModalOpen = false;
    renderModal();
  }

  function renderModal() {
    const container = document.getElementById('trade-balance-modal-root');
    if (!container) return;

    if (!modalRoot) {
      modalRoot = createRoot(container);
    }

    modalRoot.render(
      createElement(TradeBalanceModal, {
        isOpen: isModalOpen,
        onClose: closeModal
      })
    );
  }

  // Attach event listeners
  document.addEventListener('DOMContentLoaded', () => {
    const triggers = document.querySelectorAll('.modal-trigger[data-modal="trade-balance"]');
    triggers.forEach(trigger => {
      trigger.addEventListener('click', openModal);
    });

    // Initialize modal (closed)
    renderModal();
  });
</script>

<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>