---
import Layout from '../../layouts/Layout.astro';
import ModalManager from '../../components/tdaas/ModalManager.tsx';
import pageConfig from '../../data/tdaas-page-config.json';
import siteConfig from '../../data/site-config.json';

const { meta, hero, datasetsSection, datasets } = pageConfig;
---

<Layout 
  title={`${meta.title} | ${meta.titleSuffix}`}
  description={meta.description}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900 py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <!-- Badges -->
      <div class="flex flex-wrap gap-3 justify-center mb-8">
        {hero.badges.map((badge) => (
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm text-white border border-white/20">
            <span class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></span>
            {badge.text}
          </span>
        ))}
      </div>

      <!-- Main Heading -->
      <h1 class="text-5xl md:text-6xl font-bold text-center mb-6">
        <span class="text-white">{hero.mainHeading.part1}</span>
        <br />
        <span class={`bg-gradient-to-r ${hero.mainHeading.gradient} bg-clip-text text-transparent`}>
          {hero.mainHeading.part2}
        </span>
      </h1>

      <!-- Subheading -->
      <p class="text-xl text-blue-100 text-center max-w-3xl mx-auto">
        {hero.subheading}
      </p>
    </div>
  </section>

  <!-- Datasets Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          {datasetsSection.heading}
        </h2>
        <p class="text-xl text-gray-600">
          {datasetsSection.subheading}
        </p>
      </div>

      <!-- Dataset Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {datasets.map((dataset) => {
          const colors = pageConfig.colorMappings[dataset.categoryColor];
          const isActive = dataset.status === 'active';
          
          return (
            <div 
              class={`bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 ${
                isActive ? 'hover:shadow-2xl hover:-translate-y-1 cursor-pointer' : 'opacity-75'
              }`}
              data-dataset-id={dataset.id}
              data-status={dataset.status}
            >
              <!-- Category Badge -->
              <div class={`px-6 pt-6 pb-4 bg-gradient-to-r ${colors.gradient}`}>
                <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-xs font-semibold text-white uppercase tracking-wider">
                  {dataset.category}
                </span>
              </div>

              <!-- Card Content -->
              <div class="p-6">
                <!-- Icon -->
                <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${colors.gradient} flex items-center justify-center mb-4`}>
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>

                <!-- Title -->
                <h3 class="text-2xl font-bold text-gray-900 mb-3">
                  {dataset.title}
                </h3>

                <!-- Description -->
                <p class="text-gray-600 mb-6 leading-relaxed">
                  {dataset.description}
                </p>

                <!-- Features List -->
                <ul class="space-y-2 mb-6">
                  {dataset.features.map((feature) => (
                    <li class="flex items-start gap-2 text-sm text-gray-700">
                      <svg class={`w-5 h-5 ${colors.text} flex-shrink-0 mt-0.5`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>

                <!-- Data Source -->
                <div class="text-xs text-gray-500 mb-4 pb-4 border-b border-gray-200">
                  <div class="flex items-center gap-2 mb-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <span class="font-medium">Data Source:</span>
                  </div>
                  <span>{dataset.dataSource}</span>
                </div>

                <!-- Action Button or Coming Soon Badge -->
                {isActive ? (
                  <button 
                    class={`w-full py-3 px-6 bg-gradient-to-r ${colors.gradient} text-white font-semibold rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 dataset-button`}
                    data-modal-id={dataset.id}
                    type="button"
                  >
                    {dataset.buttonText}
                  </button>
                ) : (
                  <div class="w-full py-3 px-6 bg-gray-100 text-gray-500 font-semibold rounded-xl text-center">
                    <span class="flex items-center justify-center gap-2">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {dataset.buttonText}
                    </span>
                  </div>
                )}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Modal Manager (handles both modals) -->
  <ModalManager client:only="react" />

  <!-- Modal Control Script -->
  <script is:inline>
    // Initialize modal button handlers
    document.addEventListener('DOMContentLoaded', function() {
      console.log('ðŸš€ Initializing modal buttons...');
      
      // Get all dataset buttons
      const buttons = document.querySelectorAll('.dataset-button');
      console.log(`ðŸ“Š Found ${buttons.length} dataset buttons`);
      
      buttons.forEach(function(button) {
        const modalId = button.getAttribute('data-modal-id');
        console.log(`ðŸ”§ Setting up button for modal: ${modalId}`);
        
        button.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          console.log(`ðŸ”˜ Button clicked for modal: ${modalId}`);
          
          if (modalId === 'trade-balance') {
            console.log('ðŸ“¤ Dispatching openTradeBalanceModal event');
            window.dispatchEvent(new CustomEvent('openTradeBalanceModal'));
          } else if (modalId === 'top-markets') {
            console.log('ðŸ“¤ Dispatching openTopMarketsModal event');
            window.dispatchEvent(new CustomEvent('openTopMarketsModal'));
          }
        });
      });

      // Also allow clicking entire card for active datasets
      const cards = document.querySelectorAll('[data-dataset-id]');
      cards.forEach(function(card) {
        const status = card.getAttribute('data-status');
        const datasetId = card.getAttribute('data-dataset-id');
        
        if (status === 'active') {
          card.addEventListener('click', function(e) {
            // Don't trigger if clicking the button directly
            if (e.target.closest('.dataset-button')) {
              return;
            }
            
            console.log(`ðŸ“‡ Card clicked for: ${datasetId}`);
            
            if (datasetId === 'trade-balance') {
              window.dispatchEvent(new CustomEvent('openTradeBalanceModal'));
            } else if (datasetId === 'top-markets') {
              window.dispatchEvent(new CustomEvent('openTopMarketsModal'));
            }
          });
        }
      });
      
      console.log('âœ… Modal buttons initialized successfully');
    });
  </script>
</Layout>