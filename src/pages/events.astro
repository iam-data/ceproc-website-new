---
// src/pages/events.astro
// Client-side filtering - works perfectly!

import Layout from '../layouts/Layout.astro';

const pageTitle = 'International Business Events';
const pageDescription = 'Discover export opportunities, trade missions, webinars, and networking events from Canada and the United States';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            International Business Events
          </h1>
          <p class="text-xl text-blue-100 mb-8">
            Discover export opportunities, trade missions, webinars, and networking events from Canada and the United States
          </p>
          
          <!-- Country Tabs -->
          <div class="flex justify-center gap-4 mb-8">
            <button 
              id="tab-all"
              class="country-tab px-6 py-3 bg-white text-blue-900 rounded-lg font-semibold transition-all active"
              data-country="all"
            >
              ğŸŒ All Events
            </button>
            <button 
              id="tab-ca"
              class="country-tab px-6 py-3 bg-blue-800 hover:bg-blue-700 rounded-lg font-semibold transition-all"
              data-country="CA"
            >
              ğŸ Canadian Events
            </button>
            <button 
              id="tab-us"
              class="country-tab px-6 py-3 bg-blue-800 hover:bg-blue-700 rounded-lg font-semibold transition-all"
              data-country="US"
            >
              ğŸ‡ºğŸ‡¸ U.S. Events
            </button>
          </div>
          
          <!-- Search and Filters -->
          <div class="bg-white rounded-lg shadow-lg p-6 text-gray-800">
            <form id="event-search-form" class="space-y-4">
              <div class="grid md:grid-cols-3 gap-4">
                <input 
                  type="text" 
                  id="search-keyword"
                  placeholder="Search events..." 
                  class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                />
                
                <select 
                  id="filter-organizer"
                  class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                >
                  <option value="">All Organizations</option>
                  <optgroup label="Canadian Organizations">
                    <option value="edc">Export Development Canada</option>
                    <option value="bdc">Business Development Bank of Canada</option>
                    <option value="tcs">Trade Commissioner Service</option>
                    <option value="cme">Canadian Manufacturers & Exporters</option>
                  </optgroup>
                  <optgroup label="U.S. Organizations">
                    <option value="us-commerce">U.S. Dept of Commerce</option>
                    <option value="exim-bank">EXIM Bank</option>
                  </optgroup>
                </select>
                
                <select 
                  id="filter-timeframe"
                  class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                >
                  <option value="upcoming">Upcoming Events</option>
                  <option value="this-week">This Week</option>
                  <option value="this-month">This Month</option>
                  <option value="next-3-months">Next 3 Months</option>
                </select>
              </div>
              
              <button 
                type="submit"
                class="w-full md:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors"
              >
                Search Events
              </button>
            </form>
          </div>
          
          <!-- Stats Bar -->
          <div id="stats-bar" class="mt-6 flex justify-center gap-8 text-sm text-blue-100">
            <div>
              <span class="font-bold" id="stat-total">0</span> Total Events
            </div>
            <div>
              ğŸ <span class="font-bold" id="stat-ca">0</span> Canadian
            </div>
            <div>
              ğŸ‡ºğŸ‡¸ <span class="font-bold" id="stat-us">0</span> U.S.
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Loading State -->
    <div id="loading-state" class="container mx-auto px-4 py-12 text-center">
      <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <p class="mt-4 text-gray-600">Loading events...</p>
    </div>

    <!-- Events List -->
    <section class="container mx-auto px-4 py-12">
      <div id="events-container" class="hidden space-y-6">
        <!-- Events will be inserted here -->
      </div>
      
      <!-- No Results -->
      <div id="no-results" class="hidden text-center py-12">
        <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-4 text-xl font-semibold text-gray-700">No events found</h3>
        <p class="mt-2 text-gray-500">Try adjusting your search or filters</p>
      </div>
    </section>
  </div>
</Layout>

<script>
  let allEvents: any[] = [];
  let currentCountry = 'all';
  
  function createEventCard(event: any) {
    const eventDate = new Date(event.startDate);
    const formattedDate = eventDate.toLocaleDateString('en-CA', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
    
    const formattedTime = eventDate.toLocaleTimeString('en-CA', {
      hour: '2-digit',
      minute: '2-digit'
    });

    const countryFlag = event.country === 'CA' ? 'ğŸ' : event.country === 'US' ? 'ğŸ‡ºğŸ‡¸' : 'ğŸŒ';
    const countryBadge = event.country === 'CA' ? 'Canadian' : event.country === 'US' ? 'U.S.' : '';

    return `
      <div class="bg-white border border-gray-200 rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden">
        <div class="p-6">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
                  ${event.organizerName}
                </span>
                ${countryBadge ? `<span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 text-xs font-semibold rounded-full">${countryFlag} ${countryBadge}</span>` : ''}
                ${event.isFree ? '<span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">FREE</span>' : ''}
                ${event.eventType ? `<span class="inline-block px-2 py-1 bg-purple-100 text-purple-700 text-xs rounded-full">${event.eventType}</span>` : ''}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">
                ${event.title}
              </h3>
            </div>
          </div>
          
          <div class="space-y-3 mb-4">
            <div class="flex items-center text-gray-600">
              <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>${formattedDate}</span>
            </div>
            
            <div class="flex items-center text-gray-600">
              <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>${formattedTime}</span>
            </div>
            
            <div class="flex items-center text-gray-600">
              <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span>${event.location}</span>
            </div>
          </div>
          
          ${event.description ? `
            <p class="text-gray-600 mb-4 line-clamp-3">
              ${event.description}
            </p>
          ` : ''}
          
          <a 
            href="${event.url}" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors"
          >
            Register Now
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </div>
    `;
  }

  // CLIENT-SIDE FILTERING - Works perfectly!
  function filterEvents() {
    const keyword = (document.getElementById('search-keyword') as HTMLInputElement)?.value.toLowerCase() || '';
    const organizer = (document.getElementById('filter-organizer') as HTMLSelectElement)?.value || '';
    const timeframe = (document.getElementById('filter-timeframe') as HTMLSelectElement)?.value || 'upcoming';
    
    let filtered = [...allEvents];
    
    // Filter by country
    if (currentCountry !== 'all') {
      filtered = filtered.filter(e => e.country === currentCountry);
    }
    
    // Filter by organization
    if (organizer) {
      filtered = filtered.filter(e => e.organizerId === organizer);
    }
    
    // Filter by keyword
    if (keyword) {
      filtered = filtered.filter(e =>
        e.title.toLowerCase().includes(keyword) ||
        e.description.toLowerCase().includes(keyword) ||
        e.organizerName.toLowerCase().includes(keyword)
      );
    }
    
    // Filter by timeframe
    const now = new Date();
    filtered = filtered.filter(event => {
      const eventDate = new Date(event.startDate);
      
      switch (timeframe) {
        case 'this-week': {
          const endOfWeek = new Date(now);
          endOfWeek.setDate(endOfWeek.getDate() + 7);
          return eventDate >= now && eventDate <= endOfWeek;
        }
        case 'this-month': {
          const endOfMonth = new Date(now.getFullYear(), now.getMonth() + 1, 0);
          return eventDate >= now && eventDate <= endOfMonth;
        }
        case 'next-3-months': {
          const end3Months = new Date(now);
          end3Months.setMonth(end3Months.getMonth() + 3);
          return eventDate >= now && eventDate <= end3Months;
        }
        default:
          return eventDate >= now;
      }
    });
    
    displayEvents(filtered);
  }

  function displayEvents(events: any[]) {
    const loadingState = document.getElementById('loading-state');
    const eventsContainer = document.getElementById('events-container');
    const noResults = document.getElementById('no-results');
    
    if (!loadingState || !eventsContainer || !noResults) return;
    
    loadingState.classList.add('hidden');
    
    // Update stats
    const canadianEvents = events.filter(e => e.country === 'CA').length;
    const usEvents = events.filter(e => e.country === 'US').length;
    
    document.getElementById('stat-total')!.textContent = events.length.toString();
    document.getElementById('stat-ca')!.textContent = canadianEvents.toString();
    document.getElementById('stat-us')!.textContent = usEvents.toString();
    
    if (events.length === 0) {
      eventsContainer.classList.add('hidden');
      noResults.classList.remove('hidden');
      return;
    }
    
    eventsContainer.classList.remove('hidden');
    noResults.classList.add('hidden');
    eventsContainer.innerHTML = events.map(event => createEventCard(event)).join('');
  }

  async function loadAllEvents() {
    const loadingState = document.getElementById('loading-state');
    const eventsContainer = document.getElementById('events-container');
    
    if (!loadingState || !eventsContainer) return;
    
    try {
      // Fetch all events (no parameters - API just returns everything)
      const response = await fetch('/api/events');
      
      if (!response.ok) throw new Error(`HTTP ${response.status}`);
      
      const data = await response.json();
      
      if (data.success && data.events) {
        allEvents = data.events;
        filterEvents(); // Apply current filters
      }
      
    } catch (error) {
      console.error('Error loading events:', error);
      loadingState.classList.add('hidden');
      eventsContainer.classList.remove('hidden');
      eventsContainer.innerHTML = `
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
          <h3 class="text-lg font-semibold text-red-800 mb-2">Unable to Load Events</h3>
          <p class="text-red-600">${error instanceof Error ? error.message : 'An error occurred'}</p>
        </div>
      `;
    }
  }

  // Country tabs
  document.querySelectorAll('.country-tab').forEach(tab => {
    tab.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const country = target.dataset.country!;
      
      document.querySelectorAll('.country-tab').forEach(t => {
        t.classList.remove('active', 'bg-white', 'text-blue-900');
        t.classList.add('bg-blue-800', 'hover:bg-blue-700');
      });
      target.classList.add('active', 'bg-white', 'text-blue-900');
      target.classList.remove('bg-blue-800', 'hover:bg-blue-700');
      
      currentCountry = country;
      filterEvents();
    });
  });

  // Search form
  const searchForm = document.getElementById('event-search-form');
  if (searchForm) {
    searchForm.addEventListener('submit', (e) => {
      e.preventDefault();
      filterEvents();
    });
  }

  // Live filtering on dropdown change
  const organizerFilter = document.getElementById('filter-organizer');
  const timeframeFilter = document.getElementById('filter-timeframe');
  const keywordInput = document.getElementById('search-keyword');
  
  if (organizerFilter) {
    organizerFilter.addEventListener('change', filterEvents);
  }
  
  if (timeframeFilter) {
    timeframeFilter.addEventListener('change', filterEvents);
  }
  
  if (keywordInput) {
    keywordInput.addEventListener('input', filterEvents);
  }

  // Load events on page load
  loadAllEvents();
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>