---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 pt-32 pb-24">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center rounded-full bg-cyan-500/10 border border-cyan-500/30 px-4 py-2 text-sm font-semibold text-cyan-400 mb-6">
          Get in Touch
        </div>
        <h1 class="text-5xl font-bold text-white mb-6 lg:text-6xl">
          Ready to Go Global?
        </h1>
        <p class="text-xl text-slate-300">
          Connect with CEPROC to explore how we can support your export journey with expert guidance, financing solutions, and market access.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="py-24 bg-slate-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2">
        
        <!-- Contact Form -->
        <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12 border border-slate-200">
          <h2 class="text-3xl font-bold text-slate-900 mb-6">
            Send Us a Message
          </h2>
          <p class="text-slate-600 mb-8">
            Fill out the form below and our team will get back to you within 1-2 business days.
          </p>
          
          <form 
            action="https://formspree.io/f/xzznlkog" 
            method="POST"
            class="space-y-6"
            id="contact-form"
          >
            <!-- Name -->
            <div class="grid gap-6 sm:grid-cols-2">
              <div>
                <label for="first-name" class="block text-sm font-semibold text-slate-900 mb-2">
                  First Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  name="first-name" 
                  id="first-name" 
                  required
                  minlength="2"
                  maxlength="50"
                  pattern="[A-Za-zÀ-ÿ\s'-]+"
                  title="Please enter a valid first name (letters only, 2-50 characters)"
                  class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                  placeholder="John"
                />
                <p class="text-xs text-slate-500 mt-1">Minimum 2 characters</p>
              </div>
              <div>
                <label for="last-name" class="block text-sm font-semibold text-slate-900 mb-2">
                  Last Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  name="last-name" 
                  id="last-name" 
                  required
                  minlength="2"
                  maxlength="50"
                  pattern="[A-Za-zÀ-ÿ\s'-]+"
                  title="Please enter a valid last name (letters only, 2-50 characters)"
                  class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                  placeholder="Doe"
                />
                <p class="text-xs text-slate-500 mt-1">Minimum 2 characters</p>
              </div>
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold text-slate-900 mb-2">
                Email Address <span class="text-red-500">*</span>
              </label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                required
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                title="Please enter a valid email address (e.g., name@company.com)"
                class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                placeholder="john@company.com"
              />
              <p class="text-xs text-slate-500 mt-1">We'll never share your email</p>
            </div>

            <!-- Company -->
            <div>
              <label for="company" class="block text-sm font-semibold text-slate-900 mb-2">
                Company Name
              </label>
              <input 
                type="text" 
                name="company" 
                id="company"
                minlength="2"
                maxlength="100"
                class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                placeholder="Your Company Inc."
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-semibold text-slate-900 mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                name="phone" 
                id="phone"
                minlength="10"
                maxlength="17"
                pattern="^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$"
                title="Please enter a valid phone number with at least 10 digits (e.g., +1 (416) 555-1234)"
                class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
                placeholder="+1 (416) 555-1234"
              />
              <p class="text-xs text-slate-500 mt-1">Minimum 10 digits required</p>
            </div>

            <!-- Inquiry Type -->
            <div>
              <label for="inquiry-type" class="block text-sm font-semibold text-slate-900 mb-2">
                How can we help? <span class="text-red-500">*</span>
              </label>
              <select 
                name="inquiry-type" 
                id="inquiry-type" 
                required
                class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent"
              >
                <option value="">Select an option</option>
                <option value="export-advisory">Export Advisory Services</option>
                <option value="financing">Financing & Insurance</option>
                <option value="market-access">Market Access & Trade Missions</option>
                <option value="vetting-program">CEPROC Vetting Program</option>
                <option value="buyer-inquiry">International Buyer Inquiry</option>
                <option value="partnership">Partnership Opportunities</option>
                <option value="general">General Inquiry</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-slate-900 mb-2">
                Message <span class="text-red-500">*</span>
              </label>
              <textarea 
                name="message" 
                id="message" 
                rows="5" 
                required
                minlength="20"
                maxlength="2000"
                class="w-full rounded-xl border border-slate-300 px-4 py-3 text-slate-900 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent resize-none"
                placeholder="Tell us about your export goals and how we can assist you..."
              ></textarea>
              <p class="text-xs text-slate-500 mt-1">
                <span id="char-count">0</span>/2000 characters (minimum 20)
              </p>
            </div>

            <!-- Honeypot for spam protection -->
            <input 
              type="text" 
              name="_gotcha" 
              style="display:none"
              tabindex="-1"
              autocomplete="off"
            />

            <!-- Hidden fields -->
            <input type="hidden" name="_subject" value="New Contact Form Submission - CEPROC" />
            <input type="hidden" name="_next" value="/thank-you" />
            <input type="hidden" name="_captcha" value="false" />

            <!-- Error Message (hidden by default) -->
            <div id="error-message" class="hidden p-4 rounded-xl bg-red-50 border border-red-200 text-red-700">
              <svg class="inline-block h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <span id="error-text">Please fill out all required fields correctly.</span>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit"
              id="submit-btn"
              class="w-full inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-cyan-500 to-blue-600 px-8 py-4 text-base font-semibold text-white shadow-xl hover:shadow-2xl hover:scale-105 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span id="btn-text">Send Message</span>
              <svg id="btn-arrow" class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
              <svg id="btn-spinner" class="hidden ml-2 h-5 w-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>

            <p class="text-xs text-center text-slate-500">
              By submitting this form, you agree to our <a href="/privacy" class="text-cyan-600 hover:underline">Privacy Policy</a>.
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Main Contact Card -->
          <div class="bg-white rounded-3xl shadow-xl p-8 border border-slate-200">
            <h3 class="text-2xl font-bold text-slate-900 mb-6">
              Contact Information
            </h3>
            
            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start">
                <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center shadow-lg">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-semibold text-slate-900">Email</h4>
                  <a href="mailto:info@ceproc.ca" class="text-cyan-600 hover:text-cyan-700 font-medium">
                    info@ceproc.ca
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start">
                <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center shadow-lg">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-semibold text-slate-900">Phone</h4>
                  <a href="tel:+16472926514" class="text-cyan-600 hover:text-cyan-700 font-medium">
                    +1 (647) 292-6514
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start">
                <div class="flex-shrink-0 h-12 w-12 rounded-xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center shadow-lg">
                  <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-semibold text-slate-900">Office</h4>
                  <p class="text-slate-600">
                    1117 Fair Birch Dr<br />
                    Mississauga, ON L5J 4M9<br />
                    Canada
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Office Hours Card -->
          <div class="bg-gradient-to-br from-slate-900 to-slate-800 rounded-3xl shadow-xl p-8 border border-slate-700">
            <h3 class="text-2xl font-bold text-white mb-6">
              Office Hours
            </h3>
            <div class="space-y-3 text-slate-300">
              <div class="flex justify-between items-center pb-3 border-b border-slate-700">
                <span>Monday - Friday</span>
                <span class="font-semibold text-white">9:00 AM - 6:00 PM EST</span>
              </div>
              <div class="flex justify-between items-center pb-3 border-b border-slate-700">
                <span>Saturday</span>
                <span class="font-semibold text-white">10:00 AM - 2:00 PM EST</span>
              </div>
              <div class="flex justify-between items-center">
                <span>Sunday</span>
                <span class="font-semibold text-slate-400">Closed</span>
              </div>
            </div>
          </div>

          <!-- Quick Links Card -->
          <div class="bg-white rounded-3xl shadow-xl p-8 border border-slate-200">
            <h3 class="text-2xl font-bold text-slate-900 mb-6">
              Quick Links
            </h3>
            <div class="space-y-3">
              <a href="/solutions" class="flex items-center text-slate-600 hover:text-cyan-600 transition-colors group">
                <svg class="h-5 w-5 mr-3 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="group-hover:underline">Our Solutions</span>
              </a>
              <a href="/about" class="flex items-center text-slate-600 hover:text-cyan-600 transition-colors group">
                <svg class="h-5 w-5 mr-3 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="group-hover:underline">About CEPROC</span>
              </a>
              <a href="/insights" class="flex items-center text-slate-600 hover:text-cyan-600 transition-colors group">
                <svg class="h-5 w-5 mr-3 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="group-hover:underline">Market Insights</span>
              </a>
              <a href="/events" class="flex items-center text-slate-600 hover:text-cyan-600 transition-colors group">
                <svg class="h-5 w-5 mr-3 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="group-hover:underline">Events & Trade Missions</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-3xl bg-gradient-to-br from-cyan-500 to-blue-600 p-12 text-center shadow-2xl">
        <h2 class="text-4xl font-bold text-white mb-4">
          Subscribe to Our Newsletter
        </h2>
        <p class="text-xl text-cyan-100 mb-8 max-w-2xl mx-auto">
          Get the latest market insights, trade mission announcements, and export opportunities delivered to your inbox.
        </p>
        <a 
          href="/#newsletter"
          class="inline-flex items-center justify-center rounded-xl bg-white px-8 py-4 text-base font-semibold text-cyan-600 hover:bg-slate-50 transition-all shadow-xl hover:shadow-2xl hover:scale-105"
        >
          Subscribe Now
          <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Phone number validation and auto-formatting
  const phoneInput = document.getElementById('phone');
  if (phoneInput) {
    phoneInput.addEventListener('input', (e) => {
      let value = e.target.value.replace(/\D/g, '');
      
      if (value.length > 11) {
        value = value.slice(0, 11);
      }
      
      let formatted = '';
      if (value.length === 0) {
        formatted = '';
      } else if (value.length <= 3) {
        formatted = `(${value}`;
      } else if (value.length <= 6) {
        formatted = `(${value.slice(0, 3)}) ${value.slice(3)}`;
      } else if (value.length <= 10) {
        formatted = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6)}`;
      } else if (value.length === 11) {
        formatted = `+${value.slice(0, 1)} (${value.slice(1, 4)}) ${value.slice(4, 7)}-${value.slice(7)}`;
      }
      
      e.target.value = formatted;
      
      const digitsOnly = value.length;
      if (digitsOnly > 0 && digitsOnly < 10) {
        e.target.classList.add('border-red-300');
        e.target.classList.remove('border-slate-300', 'border-green-300');
      } else if (digitsOnly >= 10) {
        e.target.classList.remove('border-red-300', 'border-slate-300');
        e.target.classList.add('border-green-300');
      } else {
        e.target.classList.remove('border-red-300', 'border-green-300');
        e.target.classList.add('border-slate-300');
      }
    });
    
    phoneInput.addEventListener('blur', () => {
      const digitsOnly = phoneInput.value.replace(/\D/g, '');
      if (digitsOnly.length > 0 && digitsOnly.length < 10) {
        phoneInput.setCustomValidity('Phone number must be at least 10 digits');
      } else {
        phoneInput.setCustomValidity('');
      }
    });
  }

  // Character counter for message field
  const messageField = document.getElementById('message');
  const charCount = document.getElementById('char-count');
  
  if (messageField && charCount) {
    messageField.addEventListener('input', () => {
      const count = messageField.value.length;
      charCount.textContent = count.toString();
      
      if (count < 20) {
        charCount.classList.add('text-red-500');
        charCount.classList.remove('text-green-600');
      } else {
        charCount.classList.add('text-green-600');
        charCount.classList.remove('text-red-500');
      }
    });
  }

  // Form validation and submission
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const btnText = document.getElementById('btn-text');
  const btnArrow = document.getElementById('btn-arrow');
  const btnSpinner = document.getElementById('btn-spinner');
  const errorMessage = document.getElementById('error-message');
  const errorText = document.getElementById('error-text');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (errorMessage) errorMessage.classList.add('hidden');
      
      if (!form.checkValidity()) {
        form.reportValidity();
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Please fill out all required fields correctly.';
        return;
      }

      const firstName = document.getElementById('first-name')?.value || '';
      const lastName = document.getElementById('last-name')?.value || '';
      const email = document.getElementById('email')?.value || '';
      const message = document.getElementById('message')?.value || '';
      const phone = document.getElementById('phone')?.value || '';
      const inquiryType = document.getElementById('inquiry-type')?.value || '';

      if (firstName.trim().length < 2 || lastName.trim().length < 2) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'First and last names must be at least 2 characters.';
        return;
      }

      const emailRegex = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/i;
      if (!emailRegex.test(email)) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Please enter a valid email address.';
        return;
      }

      const phoneDigits = phone.replace(/\D/g, '');
      if (phone && phoneDigits.length < 10) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Phone number must be at least 10 digits.';
        return;
      }

      if (message.trim().length < 20) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Message must be at least 20 characters.';
        return;
      }

      if (!inquiryType) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Please select how we can help you.';
        return;
      }

      if (submitBtn) {
        submitBtn.disabled = true;
        if (btnText) btnText.textContent = 'Sending...';
        if (btnArrow) btnArrow.classList.add('hidden');
        if (btnSpinner) btnSpinner.classList.remove('hidden');
      }

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          const nextInput = form.querySelector('input[name="_next"]');
          window.location.href = nextInput?.value || '/thank-you';
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        if (errorMessage) errorMessage.classList.remove('hidden');
        if (errorText) errorText.textContent = 'Something went wrong. Please try again or email us directly.';
        
        if (submitBtn) {
          submitBtn.disabled = false;
          if (btnText) btnText.textContent = 'Send Message';
          if (btnArrow) btnArrow.classList.remove('hidden');
          if (btnSpinner) btnSpinner.classList.add('hidden');
        }
      }
    });

    const inputs = form.querySelectorAll('input, textarea, select');
    inputs.forEach(input => {
      input.addEventListener('blur', () => {
        if (!input.checkValidity()) {
          input.classList.add('border-red-300');
          input.classList.remove('border-slate-300');
        } else {
          input.classList.remove('border-red-300');
          input.classList.add('border-slate-300');
        }
      });
    });
  }
</script>