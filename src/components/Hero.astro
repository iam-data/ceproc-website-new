---
import { heroContent } from '../data/heroContent';

const colorMap = {
  cyan: { border: 'border-cyan-500/30', hover: 'hover:border-cyan-500', bg: 'bg-cyan-400', text: 'text-cyan-400' },
  blue: { border: 'border-blue-500/30', hover: 'hover:border-blue-500', bg: 'bg-blue-400', text: 'text-blue-400' },
  purple: { border: 'border-purple-500/30', hover: 'hover:border-purple-500', bg: 'bg-purple-400', text: 'text-purple-400' }
};
---

<section class="relative overflow-hidden bg-gradient-to-br from-blue-600 to-blue-800 pt-24 pb-32">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute top-40 left-1/2 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <!-- Trust Badges with Links -->
        <div class="flex items-center space-x-4 text-xs">
          {heroContent.badges.map((badge) => {
            const colors = colorMap[badge.color as keyof typeof colorMap];
            return (
              <a 
                href={badge.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class={`flex items-center space-x-2 px-3 py-2 rounded-lg bg-blue-700 bg-opacity-50 border ${colors.border} ${colors.hover} hover:bg-blue-600 hover:bg-opacity-50 transition-all group`}
              >
                <div class={`h-2 w-2 rounded-full ${colors.bg} group-hover:scale-125 transition-transform`}></div>
                <span class={`${colors.text} font-semibold`}>{badge.name}</span>
                <span class="hidden sm:inline text-blue-200 group-hover:text-white">{badge.fullName}</span>
              </a>
            );
          })}
        </div>

        <!-- Headline -->
        <div class="space-y-6">
          <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-7xl leading-tight">
            {heroContent.headline.main}
            <span class="block mt-2 text-cyan-300">
              {heroContent.headline.highlight}
            </span>
          </h1>
          <h2 class="text-xl text-cyan-200 font-medium sm:text-2xl">
            {heroContent.subheadline}
          </h2>
        </div>

        <!-- Description -->
        <p class="text-lg text-blue-100 leading-relaxed opacity-90">
          {heroContent.description}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4">
          {heroContent.ctas.map((cta) => (
            cta.primary ? (
              <a href={cta.link} class="group inline-flex items-center justify-center rounded-xl bg-white text-blue-600 px-8 py-4 text-base font-semibold shadow-xl hover:shadow-2xl hover:scale-105 transition-all hover:bg-gray-100">
                {cta.text}
                <svg class="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            ) : (
              <a href={cta.link} class="inline-flex items-center justify-center rounded-xl border-2 border-blue-400 bg-blue-700 bg-opacity-30 backdrop-blur px-8 py-4 text-base font-semibold text-white hover:border-white hover:bg-blue-600 hover:bg-opacity-50 transition-all">
                {cta.text}
              </a>
            )
          ))}
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-blue-500 border-opacity-30">
          {heroContent.stats.map((stat) => (
            <div class="group cursor-default">
              <div class="text-4xl font-bold text-white group-hover:scale-110 transition-transform">
                {stat.number}
              </div>
              <div class="text-sm text-blue-200 mt-1">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Visual -->
      <div class="relative h-96 lg:h-[600px]">
        <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-blue-500/20 to-cyan-500/20 backdrop-blur-sm"></div>
        <div class="relative h-full rounded-3xl bg-gradient-to-br from-blue-700 to-blue-900 shadow-2xl p-8 flex items-center justify-center border border-blue-500 border-opacity-30">
          <div class="text-center space-y-8">
            <div class="relative mx-auto h-40 w-40 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500 flex items-center justify-center shadow-2xl shadow-cyan-500/50 animate-pulse-slow">
              <!-- Better Globe/World Icon -->
              <svg class="h-20 w-20 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 2.944m7.843 5.638a9 9 0 01-15.686 0m15.686 0A11.953 11.953 0 0112 2.944m-7.843 5.638a9 9 0 0115.686 0" />
              </svg>
              <div class="absolute inset-0 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500 animate-ping opacity-20"></div>
            </div>
            <div class="space-y-3">
              <p class="text-2xl font-bold text-white">{heroContent.visual.title}</p>
              <p class="text-blue-200 text-lg opacity-90">{heroContent.visual.subtitle}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  .animate-pulse-slow {
    animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
